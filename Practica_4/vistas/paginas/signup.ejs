 <h1>¡Regístrate!</h1>

<form action="/usuarios/signup" method="POST" enctype="multipart/form-data">
<fieldset>
	<% if (locals.error) { %>
		<p><strong><%= locals.error %></strong></p>
	<% } %>
	<legend>Usuario y contraseña</legend>
	<div><label>Username:</label> <input type="text" name="username" /></div>
    <div><label>Email:</label> <input type="text" name="email" /></div>
	<div><label>Contraseña:</label> <input type="password" name="password" /></div>
	<div>
		<label for="inputImagen">Foto:</label>
		<input type="file" name="foto" id="inputImagen">
	</div>
	<button type="submit">Enviar</button>
</fieldset>
