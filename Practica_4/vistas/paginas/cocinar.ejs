
<h1>Publica tu nueva receta!</h1>

<form action="/publicaciones/newPost" id="cocinar-form" method="POST">
    
    <div class="cocinar-general">
        <div class = "cocinar-titulo">
            <input class = "cocinar-titulo-receta" type="text" id="titulo" name="titulo" required placeholder="Introduce el t√≠tulo de tu receta...">
            <button type="reset" class = "cocinar-cancel-btn" onclick="borrarFotos()"> X </button>
        </div>
        <div class="cocinar-columnas">
            <div class = "cocinar-col1">
                <!--Carrusel de fotos-->
                <button type="button" class = "cocinar-carroussel-btn" id="anterior">‚Üê</button>
                <div>
                    <div id="myImage"></div>
                    <button class="cocinar-carroussel-btn" id="add-image-btn">+</button>
                    <input name="files" id="imagenes" type="file" multiple class="cocinar-input_foto" style="display: none;">
                    <button class="cocinar-carroussel-btn delete-btn" id="delete-image-btn">üóë</button>
                    <textarea id="pie-de-foto" class = "cocinar-pie-de-foto">Introduce un pie de foto...</textarea>
                </div>
                <button type="button" class = "carroussel-btn" id="siguiente">‚Üí</button>
            </div>
            <div class = cocinar-col2>
                <label class = "cocinar-label">Colaboradores:</label>
                <div class = "cocinar-colab-container">
                    <input type="text" id="colaborador-input" class="cocinar-colaborador-input" placeholder="Busca colaboradores..." oninput="fillSelect()">
                    <div class = "cocinar-select-container">
                        <select name ="Colaboradores" id="colab-select" class ="cocinar-colab-select">
                            <option>Elige un colaborador...</option>
                            <% for (let i = 0; i < usuarios.length; i++) { %>
                                <option><%= usuarios[i].username %></option>
                            <% } %>
                        </select>
                        <button type="button" class = "cocinar-col-btn" id="add-colab">A√±adir</button>
                    </div>
                    <ul id="colablist">
                        <%-`<li class = "hidden-item">${session.username}</li>` %>
                    </ul>
                    </div>
                <div class = "cocinar-publish-container">
                    <input type="hidden" name="colaboradores" id="colaboradores-hidden">
                    <button type="submit" class = "cocinar-publish-btn" id = "publish-btn">Publicar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/js/select.js" type = "module"></script>