<link rel="stylesheet" href="/css/cocinar.css">

<h1>Publica tu nueva receta!</h1>

<form action="/publicaciones/newPost" id="cocinar-form" method="POST" enctype="multipart/form-data">
    
    <div class="general">
        <div class = "titulo">
            <input class = "titulo_receta" type="text" id="titulo" name="titulo" required placeholder="Introduce el t√≠tulo de tu receta...">
            <button type="reset" class = "cancel-btn" onclick="borrarFotos()"> X </button>
        </div>
        <div class="columnas">
            <div class = "col1">
                <!--Carrusel de fotos-->
                <button type="button" class = "carroussel-btn" id="anterior">‚Üê</button>
                <div>
                    <div id="myImage"></div>
                    <button class="carroussel-btn" id="add-image-btn">+</button>
                    <input type="file" name="foto" id="imagenes">
                    <button class="carroussel-btn delete-btn" id="delete-image-btn" type="button">üóë</button>
                    <textarea id="pie-de-foto" name="pieDeFoto" class = "pie-de-foto" type="button">Introduce un pie de foto...</textarea>
                </div>
                <button type="button" class = "carroussel-btn" id="siguiente">‚Üí</button>
            </div>
            <div class = col2>
                <label>Colaboradores:</label>
                <div class = "colab-container">
                    <input type="text" id="colaborador-input" class="colaborador-input" placeholder="Busca colaboradores..." oninput="fillSelect()">
                    <div class = "select-container">
                        <select name ="Colaboradores" id="colab-select" class ="colab-select">
                            <option>Elige un colaborador...</option>
                            <% for (let i = 0; i < usuarios.length; i++) { %>
                                <option><%= usuarios[i].username %></option>
                            <% } %>
                        </select>
                        <button type="button" class = "col-btn" id="add-colab">A√±adir</button>
                    </div>
                    <ul id="colablist">
                        <%-`<li class = "hidden-item">${session.username}</li>` %>
                    </ul>
                    </div>
                <div class = "publish-container">
                    <input type="hidden" name="colaboradores" id="colaboradores-hidden">
                    <button type="submit" class = "publish-btn" id = "publish-btn">Publicar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/js/select.js" type = "module"></script>