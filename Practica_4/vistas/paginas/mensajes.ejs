<link rel="stylesheet" href="/css/mensajes.css">
<link rel="stylesheet" href="/css/chat.css">
<body>
    <div class="msg-container">
      <div class="msg-header">
        <strong><%= user_2.username %></strong>
        <a href="/contenido/chat" ><button class="msg-button" type="menu" >‚Üê</button></a>
      </div>
  
      <div class="msg-messages">
        <% messages.forEach(m => { %>
          <div class="msg-mensaje <%= m.username === user_1.username ? 'msg-mio' : 'msg-otro' %>">
            <%= m.mensaje %>
          </div>
        <% }) %>
      </div>
  
      <form class="msg-input" method="POST" action="/mensaje/sendMsg">
        <input type="hidden" name="chatId" value="<%= chatId %>">
        <input type="text" name="msg_mensaje" placeholder="Escribir mensaje..." required>
        <button type="submit">Enviar</button>
      </form>
    </div>
  </body>